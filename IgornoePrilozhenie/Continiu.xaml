<UserControl x:Class="IgornoePrilozhenie.Continiu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IgornoePrilozhenie"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Вы победили!" FontSize="24" FontWeight="Bold" Foreground="Green"
                       DockPanel.Dock="Top" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
                <Button Content="Продолжить" FontSize="18" Padding="10"  Width="150" Height="60"/>
                <Border Width="40"/>
                <!-- Разделитель между кнопками -->
                <Button Content="Сдаться" FontSize="18" Padding="10"  HorizontalAlignment="Right" Width="150" Height="60"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

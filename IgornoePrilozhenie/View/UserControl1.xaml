<UserControl x:Class="IgornoePrilozhenie.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IgornoePrilozhenie"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FF403939">
    <Grid>
        <TextBlock Text="Игорное Приложение" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="55"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,70,0,0">
            <Button Content="Играть" Tag="GoModeChoose" Width="150" Height="40" Margin="0,0,0,40" Command="{Binding ShowUserControl2Command}"/>
            <Button Content="Результаты" Tag="GoToResultTable" Width="150" Height="40" Margin="0,0,0,40" Command="{Binding ShowUserControl1Command}"/>
            <Button Content="Выход" Tag="Exit" Width="150" Height="40" Click="ExitButton_Click" />
        </StackPanel>
    </Grid>
</UserControl>

<Window x:Class="IgornoePrilozhenie.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgornoePrilozhenie"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800" Background="#FF403939">
    <Grid>
        <TextBlock Text="Игорное Приложение" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="55"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,70,0,0">
            <Button Content="Играть" Tag="GoModeChoose" Width="150" Height="40" Margin="0,0,0,40" Click="PlayButton_Click"/>
            <Button Content="Результаты" Tag="GoToResultTable" Width="150" Height="40" Margin="0,0,0,40" Click="ResultButton_Click"/>
            <Button Content="Выход" Tag="Exit" Width="150" Height="40" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="IgornoePrilozhenie.ChoseRejim"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IgornoePrilozhenie"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FF403939">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="BlackJack" Width="200" Height="60" Margin="0,0,20,0" Command="{Binding ShowUserControl4Command}"/>
            <Button Content="Русская Рулетка" Width="200" Height="60" Command="{Binding ShowUserControl5Command}"/>
        </StackPanel>

        <Button Content="Назад" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Command="{Binding ShowUserControl3Command}"/>
    </Grid>
</UserControl>
